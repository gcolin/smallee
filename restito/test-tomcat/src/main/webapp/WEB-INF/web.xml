<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>RestApplication</servlet-name>
        <servlet-class>net.gcolin.rest.servlet.RestServlet</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>net.gcolin.rest.testtomcat.RsApplication</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PostServlet</servlet-name>
    	<servlet-class>net.gcolin.rest.testtomcat.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestApplication</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostServlet</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
</web-app>
